{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/coordinate_transformations.schema.json",
  "title": "Coordinate Transformations",
  "description": "座標変換結果のスキーマ",
  "type": "object",
  "required": ["transform_method", "frames"],
  "properties": {
    "transform_method": {
      "type": "string",
      "description": "使用した座標変換手法",
      "enum": ["homography", "piecewise_affine", "thin_plate_spline"]
    },
    "transformer_info": {
      "type": "object",
      "description": "変換器の情報",
      "properties": {
        "method": { "type": "string" },
        "num_points": { "type": "integer" },
        "num_triangles": { "type": "integer" },
        "training_error": {
          "type": "object",
          "properties": {
            "rmse": { "type": "number" },
            "max_error": { "type": "number" },
            "mean_error": { "type": "number" }
          }
        }
      }
    },
    "frames": {
      "type": "array",
      "description": "フレームごとの検出・変換結果",
      "items": {
        "$ref": "#/$defs/frame"
      }
    }
  },
  "$defs": {
    "frame": {
      "type": "object",
      "required": ["frame_number", "timestamp", "detections"],
      "properties": {
        "frame_number": {
          "type": "integer",
          "description": "フレーム番号"
        },
        "idx": {
          "type": "integer",
          "description": "フレーム番号（コンパクト形式）"
        },
        "timestamp": {
          "type": "string",
          "description": "タイムスタンプ"
        },
        "ts": {
          "type": "string",
          "description": "タイムスタンプ（コンパクト形式）"
        },
        "detections": {
          "type": "array",
          "items": { "$ref": "#/$defs/detection" }
        },
        "det": {
          "type": "array",
          "items": { "$ref": "#/$defs/detection_compact" }
        }
      }
    },
    "detection": {
      "type": "object",
      "description": "検出結果（標準形式）",
      "properties": {
        "bbox": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" },
            "width": { "type": "number" },
            "height": { "type": "number" }
          }
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "camera_coords": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" }
          }
        },
        "floor_coords_px": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" }
          }
        },
        "floor_coords_mm": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" }
          }
        },
        "zone_ids": {
          "type": "array",
          "items": { "type": "string" }
        },
        "track_id": {
          "type": "integer"
        }
      }
    },
    "detection_compact": {
      "type": "object",
      "description": "検出結果（コンパクト形式）",
      "properties": {
        "bb": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4,
          "description": "[x, y, width, height]"
        },
        "conf": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "cam": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 2,
          "maxItems": 2,
          "description": "[x, y]"
        },
        "floor_px": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 2,
          "maxItems": 2
        },
        "floor_mm": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 2,
          "maxItems": 2
        },
        "zones": {
          "type": "array",
          "items": { "type": "string" }
        },
        "id": {
          "type": "integer"
        }
      }
    }
  }
}
