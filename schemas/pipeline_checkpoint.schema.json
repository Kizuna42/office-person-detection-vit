{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/pipeline_checkpoint.schema.json",
  "title": "Pipeline Checkpoint",
  "description": "パイプラインチェックポイントのスキーマ",
  "type": "object",
  "required": ["session_dir", "created_at", "phases"],
  "properties": {
    "session_dir": {
      "type": "string",
      "description": "セッションディレクトリのパス"
    },
    "created_at": {
      "type": "string",
      "description": "チェックポイント作成日時（ISO 8601形式）",
      "format": "date-time"
    },
    "last_updated": {
      "type": ["string", "null"],
      "description": "最終更新日時（ISO 8601形式）",
      "format": "date-time"
    },
    "last_phase": {
      "type": ["string", "null"],
      "description": "最後に完了したフェーズ名"
    },
    "phases": {
      "type": "object",
      "description": "フェーズごとのステータス",
      "additionalProperties": {
        "$ref": "#/$defs/phase_status"
      },
      "propertyNames": {
        "pattern": "^[0-9]{2}_[a-z]+$"
      }
    }
  },
  "$defs": {
    "phase_status": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "description": "フェーズのステータス",
          "enum": ["pending", "in_progress", "completed", "failed"]
        },
        "timestamp": {
          "type": ["string", "null"],
          "description": "ステータス更新日時",
          "format": "date-time"
        },
        "data": {
          "type": "object",
          "description": "フェーズ固有のデータ",
          "additionalProperties": true
        }
      }
    }
  }
}
